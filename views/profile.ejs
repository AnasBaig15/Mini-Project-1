<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="w-full flex justify-end">
        <a
          class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block"
          href="/login"
        >
          Logout</a
        >
        
      </div>
      <div class="flex item-start gap-3">
        <div class="w-10 h-10 rounded-md overflow-hidden" >
          <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
        </div>
        <h3 class="text-3xl">
        <span class="font-light">Hello </span> <%= user.name %>
      </h3>
    </div>
      <h5 class="mb-5 mt-5">You can Create a new post</h5>
      <form action="/post" method="post">
        <textarea
          class="block p-323 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"
          name="content"
          placeholder="What in Your mind ?"
        ></textarea>
        <input
          class="px-3 w-40 py-2 text-sm bg-blue-500 text-sm block rounded-md mt-2"
          type="submit"
          value="Create Your Post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your Posts.</h3>
        <div class="postcontainer mt-5">
          <% user.posts.forEach(function(post){%>
          <div
            class="post w-1/3 p-4 mb-4 border-[1px] border-zinc-800 bg-zinc-800 rounded-md"
          >
            <h4 class="text-blue-500 mb-2">@ <%= user.username%></h4>
            <p class="text-sm tracking-tighter">
             <%= post.content %>
            </p>
            <small class="mt-2 inline-block"><%= post.likes.length%></small>
            <div class="btn flex mt-5 gap-4">
              <a class="text-blue-500" href="/like/<%= post._id%>"><%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike"%></a>
              <a class="text-zinc-600" href="/edit/<%= post._id%>"> edit</a>
            </div>
          </div><% })%>
        </div>
      </div>
    </div>
  </body>
</html>
